-- Game list with Game IDs (PlaceIds) and corresponding script URLs
local gameScripts = {
    [100902716985467] = "https://raw.githubusercontent.com/lumecraftor1/Scripts/refs/heads/main/bee_master_simulator.lua",  -- Bee Master Simulator
}

-- Check if the current game is in the list
local gameId = game.PlaceId
local scriptURL = gameScripts[gameId]

if scriptURL then
    -- Notify the player that the script is loading
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Univers Hub Notification",
        Text = "Game found! The script is loading.",
        Duration = 5
    })

    -- Try to load and execute the script
    local success, result = pcall(function()
        local scriptContent = game:HttpGet(scriptURL)  -- Fetch the script
        if scriptContent then
            loadstring(scriptContent)()  -- Execute the script if it's fetched successfully
        else
            error("Script content is empty.")
        end
    end)

    -- Handle any errors during execution
    if not success then
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Error",
            Text = "Failed to load the script: " .. result,
            Duration = 5
        })
    end
else
    -- If the game is not found in the list, show an error
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Error",
        Text = "Game script not found in the list.",
        Duration = 5
    })
end
