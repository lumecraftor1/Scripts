-- Encrypted game scripts with PlaceIds
local encryptedGameScripts = {
    [100902716985467] = "\104\116\116\112\115\58\47\47\114\97\119\46\103\105\116\104\117\98\46\99\111\109\47\117\115\101\114\110\97\109\101\47\114\101\112\111\47\109\97\105\110\47\115\99\114\105\112\116\46\108\117\97", -- Example encrypted URL for Bee Master Simulator
}

-- Decryption function
local function decryptScript(encryptedString)
    local decoded = {}
    for char in encryptedString:gmatch("%d+") do
        table.insert(decoded, string.char(tonumber(char)))
    end
    return table.concat(decoded)
end

-- Helper function to securely load the script
local function secureLoadScript(url)
    print("Loading script from URL:", url) -- Debugging
    local success, result = pcall(function()
        local scriptContent = game:HttpGet(url)
        print("Script Content:", scriptContent) -- Debugging
        if scriptContent and #scriptContent > 0 then
            loadstring(scriptContent)()
        else
            error("Script content is invalid or empty.")
        end
    end)
    if not success then
        warn("Failed to load script:", result)
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Script Error",
            Text = "Failed to load the script. Check your internet connection or contact support.",
            Duration = 5
        })
    end
end

-- Check the current game's PlaceId
local gameId = game.PlaceId
local encryptedScriptURL = encryptedGameScripts[gameId]

if encryptedScriptURL then
    -- Notify the player that the game is supported
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Univers Hub Notification",
        Text = "Game found! Loading the script securely...",
        Duration = 5
    })

    -- Decrypt and load the script
    local scriptURL = decryptScript(encryptedScriptURL)
    secureLoadScript(scriptURL)
else
    -- Notify the player if the game is not supported
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Error",
        Text = "Game not supported by Univers Hub.",
        Duration = 5
    })
end
