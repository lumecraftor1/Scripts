-- Encrypted game scripts with PlaceIds
local encryptedGameScripts = {
    [100902716985467] = "\72\116\116\112\115\58\47\47\115\101\99\114\101\116\46\115\101\114\118\101\114\47\66\101\101\77\97\115\116\101\114\83\99\114\105\112\116", -- Example encrypted URL for Bee Master Simulator
    -- Add more games and encrypted URLs here
}

-- Decryption function
local function decryptScript(encryptedString)
    local decoded = {}
    for char in encryptedString:gmatch("%d+") do
        table.insert(decoded, string.char(tonumber(char)))
    end
    return table.concat(decoded)
end

-- Check the current game's PlaceId
local gameId = game.PlaceId
local encryptedScriptURL = encryptedGameScripts[gameId]

if encryptedScriptURL then
    -- Notify the player that the game is supported
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Univers Hub Notification",
        Text = "Game found! Loading the script securely...",
        Duration = 5
    })

    -- Decrypt the URL and load the script securely
    pcall(function()
        local scriptURL = decryptScript(encryptedScriptURL)
        local scriptContent = game:HttpGet(scriptURL)
        if scriptContent and #scriptContent > 0 then
            loadstring(scriptContent)()
        else
            error("Empty or invalid script content.")
        end
    end)
else
    -- Notify the player if the game is not supported
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Error",
        Text = "Game not supported by Univers Hub.",
        Duration = 5
    })
end
