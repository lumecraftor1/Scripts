-- Game list with Game IDs (PlaceIds) and corresponding script URLs
local gameList = {
    [100902716985467] = "https://raw.githubusercontent.com/lumecraftor1/Scripts/refs/heads/main/Bee-master-exe"  -- Bee Master Simulator
}

-- Function to display notifications
local function showNotification(title, text, duration)
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = title,
        Text = text,
        Duration = duration
    })
end

-- Function to load and execute a script
local function loadGameScript(scriptUrl)
    local success, errorMessage = pcall(function()
        -- Fetch the script content
        local scriptContent = game:HttpGet(scriptUrl)

        -- Check if script content is not empty or nil
        if scriptContent and scriptContent ~= "" then
            -- Execute the script
            loadstring(scriptContent)()
        else
            error("Script content is empty or invalid.")
        end
    end)

    -- If loading the script failed, show an error message
    if not success then
        showNotification("Error", "Failed to load the script: " .. errorMessage, 5)
    end
end

-- Main logic for checking the game and loading the script
local currentPlaceId = game.PlaceId
local scriptUrl = gameList[currentPlaceId]

if scriptUrl then
    -- Notify the player that the game was found and the script is loading
    showNotification("Univers Hub Notification", "Game found! The script is loading.", 5)

    -- Load the game script
    loadGameScript(scriptUrl)
else
    -- Notify the player that the game is not found in the list
    showNotification("Error", "Game script not found in the list.", 5)
end
